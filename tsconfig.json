{
  "compilerOptions": {
   "module": "commonjs",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "lib": ["esnext"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
     "target": "es6",
     "noImplicitAny": true,
     "moduleResolution": "node",
     "baseUrl": ".",
     "paths": {
         "*": ["node_modules/*", "src/types/*"]
     }
  }, 
  "include": ["./api/**/*"]
 }